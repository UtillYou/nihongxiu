page {
  width: 100%;
  height: 100%;
  background-color: #fafafa;
}

container {
  background-color: #fff;
}

.nav {
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  /* background: #f7f7f7; */
  font-size: 16px;
  white-space: nowrap;
  z-index: 99;
  border-top: 1px #ccc solid;
  border-bottom: 1px #ccc solid;
}

.nav-item {
  width: 25%;
  display: inline-block;
  text-align: center;
}

.nav-item.active {
  color: #ab2b2b;
  border-bottom: 2px #ab2b2b solid;
  font-weight: bold;
}

.tab-box {
  background: greenyellow;
  padding-top: 80rpx;
  height: 100%;
  box-sizing: border-box;
}

.tab-content {
  overflow-y: scroll;
}

.cate-item {
  /* margin-top: 20rpx; */
  height: auto;
  overflow: hidden;
}

.c image {
  margin: 0 auto;
  display: block;
  text-align: center;
  width: 120rpx;
  height: 120rpx;
}

.c text {
  margin: 5px auto;
  display: block;
  width: 258rpx;
  height: 29rpx;
  line-height: 29rpx;
  text-align: center;
  font-size: 29rpx;
  color: #999;
}

.cate-item .h {
  height: 145rpx;
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.cate-item .h .name {
  display: block;
  height: 35rpx;
  margin-bottom: 18rpx;
  font-size: 30rpx;
  color: #333;
}

.cate-item .h .desc {
  display: block;
  height: 24rpx;
  font-size: 24rpx;
  color: #999;
}

.cate-item .b {
  width: 750rpx;
  padding: 0 6.25rpx;
  height: auto;
  overflow: hidden;
}

.cate-item .b .item {
  float: left;
background: #fff;
width: 298rpx;
margin-bottom: 15.25rpx;
padding-bottom: 33.333rpx;
height: auto;
overflow: hidden;
text-align: center;
box-shadow: 0px 0px 3px 2px rgba(220,220,220,0.4);
background: #fff;
margin-top: 15rpx;
margin-left: 10rpx;
margin-right: 10rpx;
border-radius: 10rpx;

}

.cate-item .b .item-b {
  margin-left: 6.25rpx;
}

.cate-item .item .img {
  width: 302rpx;
  height: 302rpx;
}

.cate-item .item .name {
  /* width: 280rpx; */
  overflow: hidden;
  /* font-size: 24rpx; */
  /* padding: 24rpx 0 0rpx 0; */
  color: #000;
  /* margin-left: 24rpx; */
  display: -webkit-box;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-box-orient: vertical;
  height:126rpx;

}

.cate-item .item .price {
  display: block;
  width: 365.625rpx;
  height: 30rpx;
  text-align: center;
  font-size: 30rpx;
  color: #ff4900;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.c {
  height: auto;
  width: 100%;
  margin-top: 200rpx;
}
