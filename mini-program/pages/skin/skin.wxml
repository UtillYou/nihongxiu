<view>

  <!-- 我的肤质，三个下拉框 -->
  <view class="top" wx:for="{{list}}" wx:key='list'>
    <view style="font-weight:bold;padding-left:10px;">{{item.name}}</view>
    <view class='select_box'>
      <view class='select' catchtap='selectTap' data-id="{{item.id}}">
        <text class='select_text'>{{item.data.name[item.index]}} </text>
        <image class='select_img {{item.show==true? "select_img_rotate":"" }}' src='/static/images/down.png'></image>
      </view>
      <view class='option_box' style='height:{{item.show==true?(item.data.name.length>5?300:item.data.name.length*60):0}}rpx;'>
        <text class='option' catchtap='optionTap' wx:for="{{item.data.name}}"   wx:key='optionTap'  wx:for-item="item1" data-id="{{item.id}}" data-index="{{index}}">{{item1}}</text>
      </view>
    </view>
