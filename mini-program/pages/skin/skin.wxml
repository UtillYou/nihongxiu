  </view>

  <view class="title">同肤质最爱单品</view>
  <!-- tab导航栏 -->
  <view class="middle">
  
    <scroll-view scroll-x="true" class="nav" scroll-left="{{navScrollLeft}}" scroll-with-animation="{{true}}">
      <block wx:for="{{navData}}" wx:for-index="idx" wx:for-item="navItem" wx:key="idx">
        <view class="nav-item {{currentTab == idx ?'active':''}}" data-current="{{idx}}" bindtap="switchNav" data-id="{{navItem.id}}">{{navItem.name}}</view>
      </block>
    </scroll-view>
    
  </view>

  <!-- 页面内容 -->
   <view class="description">
      {{description}}
   </view>



  <view class="products">
    <view class="a-section a-new">
      <view class="b">
        <view class="item" wx:for="{{goodsList}}" wx:key='goodsList'>
          <navigator url="/pages/goods/goods?id={{item.product_id}}">
            <image class="img" src="{{item.image}}" background-size="cover"></image>
            <text class="name">{{item.name}}</text>
            <text class="price">￥{{item.special_price==''?item.price:item.special_price}}</text>
          </navigator>
        </view>
      </view>
    </view>

  </view>







  <view class="bto">
    <view class="text1" bindtap='gotoCheck'>
      肤质测试
    </view>
  </view>
</view>